<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="200" 
				   backgroundColor="0x696969" borderColor="0x878787" >
	<s:Label id="titleLabel"/>
	<mx:ProgressBar id="pb" width="180" height="50" horizontalCenter="0" verticalCenter="0" mode="manual" labelPlacement="top"/>
	<fx:Script>
		<![CDATA[
			public function setLabel($label:String):void
			{
				pb.label = $label + "... %1/%2";
			}
			public function setProgress($current:int, $total:int):void
			{
				pb.setProgress($current,$total);
			}
		]]>
	</fx:Script>
</s:BorderContainer>
