<?xml version="1.0" encoding="utf-8"?>
<s:DataGrid xmlns:fx="http://ns.adobe.com/mxml/2009" 
			xmlns:s="library://ns.adobe.com/flex/spark" 
			xmlns:mx="library://ns.adobe.com/flex/mx" 
			width="100%" height="100%"
			sortableColumns="false" >
	<s:columns>
		<s:ArrayList>
			<s:GridColumn width="40" dataField="frameNum">
				<s:headerText>{FxGettext.gettext("Frame number")}</s:headerText>
			</s:GridColumn>
			<s:GridColumn width="60" dataField="frameName">
				<s:headerText>{FxGettext.gettext("Frame name")}</s:headerText>
			</s:GridColumn>
			<s:GridColumn dataField="frameSize">
				<s:headerText>{FxGettext.gettext("Trimmed size")}</s:headerText>
			</s:GridColumn>
			<s:GridColumn dataField="originSize">
				<s:headerText>{FxGettext.gettext("Original size")}</s:headerText>
			</s:GridColumn>
		</s:ArrayList>
	</s:columns>
	<fx:Script>
		<![CDATA[
			import gnu.as3.gettext.FxGettext;
		]]>
	</fx:Script>
</s:DataGrid>